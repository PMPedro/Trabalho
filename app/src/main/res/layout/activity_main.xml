<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView57"
        android:layout_width="417dp"
        android:layout_height="21dp"
        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/linha" />

    <TextView
        android:id="@+id/activitymainForgotPassword"
        android:layout_width="274dp"
        android:layout_height="24dp"
        android:text="NÃ£o se lembra da password?"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/ForgotPassword"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activitymainbtSignUp"
        app:layout_constraintVertical_bias="0.916" />

    <ImageView
        android:id="@+id/imageView58"
        android:layout_width="103dp"
        android:layout_height="93dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleX="1.45"
        android:scaleY="1.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView57"
        app:srcCompat="@drawable/medico" />

    <Button

        android:id="@+id/activitymainbtLogin"
        android:layout_width="97dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/loginbutao"
        android:clickable="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activitymainPassword"
        app:layout_constraintVertical_bias="0.2" />

    <TextView

        android:id="@+id/activitymainbtSignUp"
        android:layout_width="154dp"
        android:layout_height="23dp"
        android:layout_marginTop="36dp"
        android:clickable="true"
        android:text="Criar Conta"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activitymainbtLogin"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/activitymainEmail"
        android:layout_width="278dp"
        android:layout_height="64dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/retangulo27"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView57" />

    <EditText
        android:id="@+id/activitymainPassword"
        android:layout_width="278dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/retangulo28"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activitymainEmail" />

</androidx.constraintlayout.widget.ConstraintLayout>