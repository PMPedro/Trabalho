<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frame_6"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/activitymainEmail"
        android:layout_width="282dp"
        android:layout_height="77dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/rectangle_100"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/activitymainPassword"
        android:layout_width="282dp"
        android:layout_height="77dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_100"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activitymainEmail" />

    <TextView
        android:id="@+id/activitymainForgotPassword"
        android:layout_width="201dp"
        android:layout_height="22dp"
        android:text="Não se lembra da Password?"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/ForgotPassword"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView

        android:id="@+id/activitymainbtSignUp"
        android:layout_width="240dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:clickable="true"

        android:text="Não tem conta?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activitymainbtLogin" />

    <Button

        android:id="@+id/activitymainbtLogin"
        android:layout_width="282dp"
        android:layout_height="77dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/group_12"
        android:clickable="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/activitymainPassword"
        app:layout_constraintStart_toStartOf="@+id/activitymainPassword"
        app:layout_constraintTop_toBottomOf="@+id/activitymainPassword" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="209dp"
        android:layout_height="186dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cenaemcima" />

</androidx.constraintlayout.widget.ConstraintLayout>