<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/activitymainEmail"
        android:layout_width="269dp"
        android:layout_height="71dp"
        android:textColorHint="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rectangle_101"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/black"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView16" />

    <EditText
        android:id="@+id/activitymainPassword"
        android:layout_width="269dp"
        android:layout_height="71dp"

        android:textColorHint="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rectangle_101"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"


        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activitymainEmail" />

    <TextView
        android:id="@+id/activitymainForgotPassword"
        android:layout_width="201dp"
        android:layout_height="22dp"
        android:text="Não se lembra da Password?"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/ForgotPassword"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView

        android:id="@+id/activitymainbtSignUp"
        android:layout_width="240dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:clickable="true"

        android:text="Não tem conta?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activitymainbtLogin" />

    <Button
        android:id="@+id/activitymainbtLogin"
        android:layout_width="269dp"
        android:layout_height="71dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/login"
        android:clickable="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/activitymainPassword"
        app:layout_constraintStart_toStartOf="@+id/activitymainPassword"
        app:layout_constraintTop_toBottomOf="@+id/activitymainPassword" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/medico" />

</androidx.constraintlayout.widget.ConstraintLayout>