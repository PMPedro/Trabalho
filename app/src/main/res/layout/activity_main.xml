<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <Button

        android:id="@+id/activitymainbtLogin"
        android:layout_width="154dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/retangulo7"
        android:clickable="false"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/activitymainPassword"
        tools:layout_editor_absoluteX="128dp" />

    <TextView

        android:id="@+id/activitymainbtSignUp"
        android:layout_width="154dp"
        android:layout_height="23dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:text="Criar Conta"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activitymainbtLogin" />

    <EditText
        android:id="@+id/activitymainEmail"
        android:layout_width="278dp"
        android:layout_height="64dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/retangulo27"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/imageView57"
        tools:layout_editor_absoluteX="66dp" />

    <EditText
        android:id="@+id/activitymainPassword"
        android:layout_width="278dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/retangulo28"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/activitymainEmail"
        tools:layout_editor_absoluteX="66dp" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="409dp"
        android:layout_height="33dp"
        android:layout_marginBottom="108dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/linha" />

    <Button
        android:id="@+id/activitymainbtLoginTele"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/telemovelbutao"
        app:layout_constraintBottom_toTopOf="@+id/imageView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/activitymainForgotPassword" />

    <TextView
        android:id="@+id/activitymainForgotPassword"
        android:layout_width="112dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        android:text="NÃ£o tem conta?"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textAppearance="@style/ForgotPassword"
        android:textColor="#FFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imageView15"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView58"
        android:layout_width="103dp"
        android:layout_height="93dp"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleX="1.45"
        android:scaleY="1.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView15"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/medico" />

    <ImageView
        android:id="@+id/imageView57"
        android:layout_width="417dp"
        android:layout_height="21dp"
        android:layout_marginTop="108dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/linha" />

</androidx.constraintlayout.widget.ConstraintLayout>